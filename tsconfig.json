{
	"extends": "astro/tsconfigs/strict",
	"include": [
		".astro/types.d.ts",
		"**/*"
	],
	"exclude": [
		"dist"
	],
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"baseUrl": ".",
		"paths": {
			"@/public/*": [
				"./public/*"
			],
			"@/components/*": [
				"./src/components/*"
			],
			"@/layouts/*": [
				"./src/layouts/*"
			],
			"@/lib/*": [
				"./src/lib/*"
			],
			"@/content/*": [
				"./src/content/*"
			]
		}
	}
}
