---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

import { getTransitionName } from "@/lib/cover-transition";

export interface Props {
	src: ImageMetadata;
	alt: string;
}

const { src, alt } = Astro.props;

const transitionName = getTransitionName(src.src);
---

<Image
  transition:name={transitionName}
  src={src}
  alt={alt}
  class="group-hover:scale-110 w-full h-full object-cover object-center transition-transform"
/>

<script is:inline define:vars={{ filename: transitionName }}>
  console.log(filename);
</script>
